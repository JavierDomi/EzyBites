<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:padding="80px">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:ignore="MissingConstraints">
<!--Hacer que solo este en blanco el que este en el target/focus, los otros en gris
y a lo mejor tb un subrayado-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:paddingHorizontal="30px"
            android:text="Para ti"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:paddingHorizontal="30px"
            android:text="Amigos"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:paddingHorizontal="30px"
            android:text="Comunidades"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="570px"
        android:layout_marginVertical="80px"
        android:background="@drawable/banner_shape"
        android:clipToOutline="true">
    </View>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/teal_200"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300px">
            <View
                android:layout_width="1000px"
                android:layout_height="200px"
                android:background="@color/purple_500"
                android:layout_marginRight="40px"/>
            <View
                android:layout_width="1000px"
                android:layout_height="200px"
                android:background="@color/black"
                android:layout_marginRight="40px"/>
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>

